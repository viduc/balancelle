{% extends '@Balancelle/Default/layout.html.twig' %}

{% block body %}
    {% set action = app.request.attributes.get("_route") %}
    {{ parent() }}
    <div class="main-content-inner">
        <div class="col-xl-6 col-lg-6 col-md-12 col-ml-12">
            <div class="card" style="background-color: #bbbbbb">
                <div class="card-body" >
                    <h4 class="title">{{ titre }}</h4>
                    {{ form_start(form) }}
                    <div class="form-row align-items-center" >
                        <div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 my-1">
                            <label for="sujet">sujet du mail</label>
                            {{ form_widget(form.sujet, {'attr': {'class': 'form-control',
                                'placeholder': "sujet"}}) }}
                        </div>
                        <div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 my-1">
                            <label for="message">Message</label>
                            {{ form_widget(form.message, {'attr': {'class': 'form-control',
                                'placeholder': "message"}}) }}
                        </div>
                        <div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 my-1">
                            <label for="document">Documents joint</label>
                            <div id="filesProto" data-prototype="
                                {{ form_widget(form.documents.vars.prototype, {'attr': {'class': 'form-control'}})|e }}
                            "></div>
                            <div class="row">
                                <div class="col col-xs-12" id="filesBox">
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="form-row align-items-center ml-3">
                        <div class="form-group col-xl-2 col-lg-2 col-md-2 col-sm-1 my-1">
                            {{ form_widget(form) }}
                                <input type="submit" value="Envoyer" class="btn btn-rounded btn-success mb-3"/>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var fileCount = {{ form.documents|length }};
    </script>
{% endblock %}