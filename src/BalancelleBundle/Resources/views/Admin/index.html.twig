{% extends '@Balancelle/Default/layout.html.twig' %}
{% block body %}
    <div class="main-content-inner">
        <!-- pie chart start -->
        <div class="row">
            <div class="col-lg-12 mt-5">
                <div class="card">
                    <div class="data-tables">
                        <table id="dataTable2" name="dataTable2" class="text-center">
                            <thead class="bg-light text-capitalize">
                            <tr>
                                <th>Famille</th>
                                <th>total</th>
                                <th>faites</th>
                                <th>inscrit</th>
                                <th>r√©serve</th>
                                <th>Progression</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <script type="text/javascript">
                                var familles = [];
                            </script>
                            {% for famille in familles %}
                                <script type="text/javascript">
                                    familles[{{ famille.id }}] = {{ famille.pourcentagePermanenceFaite }};
                                </script>
                                <tr>
                                    <td>{{ famille.nom }}</td>
                                    <td>{{ famille.nombrePermanence }}</td>
                                    <td>{{ famille.permFaite|length }}</td>
                                    <td>{{ famille.permanenceInscrit|length - famille.permFaite|length }}</td>
                                    <td>{{ famille.nombrePermanence - famille.permFaite|length - (famille.permanenceInscrit|length - famille.permFaite|length) }}</td>
                                    <td>
                                        <div class="progress-perm">
                                            <div id="progessBarPermanence{{ famille.id }}" class="progress-bar-perm"></div>
                                        </div>
                                    </td>
                                    <td><a href="{{ path('famille_edit', { 'id': famille.id }) }}">Voir</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 mt-5">
                <div class="card">
                    <div class="data-tables">
                        <table id="dataTable2" name="dataTable2" class="text-center">
                            <thead class="bg-light text-capitalize">
                            <tr>
                                <th>Structure</th>
                                <th>Magasin</th>
                                <th>debut</th>
                                <th>fin</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for famille in familles %}
                                {% if famille.courses|length > 0 %}
                                    {{ dump(famille.courses) }} //TODO boucler sur la collection -> course.
                                <tr>
                                    <td>{{ famille.courses.course.structure.nom }}</td>
                                    <td>{{ famille.courses.course.magasin.nom }}</td>
                                    <td>{{ famille.courses.course.dateDebut|date('d/m/Y') }}</td>
                                    <td>{{ famille.courses.course.dateFin|date('d/m/Y') }}</td>
                                    <td><a href="{{ path('famille_edit', { 'id': famille.id }) }}">Voir</a></td>
                                </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- pie chart end -->
    </div>
    <script
            type="text/javascript"
            src="{{ asset('bundles/balancelle/js/balancelle_permanences_admin.js') }}" >
    </script>
{% endblock %}