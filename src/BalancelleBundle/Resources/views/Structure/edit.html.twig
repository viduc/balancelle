{% extends '@Balancelle/Default/layout.html.twig' %}

{% block body %}
    {% set action = app.request.attributes.get("_route") %}
    {{ parent() }}
    <div class="main-content-inner">
        <div class="col-xl-12 col-lg-12 col-md-12 col-ml-12">
            <div class="card" style="background-color: #bbbbbb">
                <div class="card-body" >
                    <h4 class="header-title">Information sur la structure</h4>
                    {{ form_start(form) }}
                    <div class="form-row align-items-center" >
                        <div class="form-group col-xl-3 col-lg-3 col-md-3 col-sm-12 my-1">
                            <label for="nom">Nom</label>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control',
                                'placeholder': "nom"}}) }}
                        </div>
                        <div class="form-group col-xl-3 col-lg-3 col-md-3 col-sm-12 my-1">
                            <label for="nom">Nom court</label>
                            {{ form_widget(form.nomCourt, {'attr': {'class': 'form-control',
                                'placeholder': "nomCourt"}}) }}
                        </div>
                        <div class="form-group col-xl-5 col-lg-5 col-md-5 col-sm-12 my-1">
                            <label for="email">Active</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control',
                                'placeholder': "email"}}) }}
                        </div>
                        <div class="form-group col-xl-1 col-lg-1 col-md-1 col-sm-12 my-1">
                            <label for="structureActive">Active</label>
                            {{ form_widget(form.active, {'attr': {'class': 'form-control',
                                'placeholder': "active"}}) }}
                        </div>
                    </div>
                    <div class="form-row align-items-center" >
                        <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12 my-1">
                            <label for="parent1">Commentaire</label>
                            {{ form_widget(form.commentaire, {'attr': {'class': 'form-control',
                                'placeholder': "commentaire"}}) }}
                        </div>
                    </div><br>
                    <div class="form-row align-items-center" >
                        <div class="form-group col-xl-3 col-lg-3 col-md-3 col-sm-6 my-1">
                            <label for="heureDebutPermanenceMatin">Heure du début de la permanence le matin</label>
                            {{ form_widget(form.heureDebutPermanenceMatin, {'attr': {'class': 'form-control',
                                'placeholder': "format HH-mm-ss"}}) }}
                        </div>
                        <div class="form-group col-xl-3 col-lg-3 col-md-3 col-sm-6 my-1">
                            <label for="heureFinPermanenceAm">Heure de fin de la permanence le matin</label>
                            {{ form_widget(form.heureFinPermanenceMatin, {'attr': {'class': 'form-control',
                                'placeholder': "format HH-mm-ss"}}) }}
                        </div>
                        <div class="form-group col-xl-3 col-lg-3 col-md-3 col-sm-6 my-1">
                            <label for="heureDebutPermanenceAM">Heure du début de la permanence l'am</label>
                            {{ form_widget(form.heureDebutPermanenceAM, {'attr': {'class': 'form-control',
                                'placeholder': "format HH-mm-ss"}}) }}
                        </div>
                        <div class="form-group col-xl-3 col-lg-3 col-md-3 col-sm-6 my-1">
                            <label for="heureFinPermanenceAM">Heure de fin de la permanence l'am</label>
                            {{ form_widget(form.heureFinPermanenceAM, {'attr': {'class': 'form-control',
                                'placeholder': "format HH-mm-ss"}}) }}
                        </div>
                    </div><br>
                    <div class="form-row align-items-center ml-3">
                        <div class="form-group col-xl-2 col-lg-2 col-md-2 col-sm-1 my-1">
                            {{ form_widget(form) }}
                            {% if 'new' in action %}
                                <input type="submit" value="créer" class="btn btn-rounded btn-success mb-3"/>
                            {% endif %}
                            {% if 'edit' in action %}
                                <input type="submit" value="enregister" class="btn btn-rounded btn-success mb-3"/>
                            {% endif %}
                            {{ form_end(form) }}
                        </div>
                        {% if delete_form is defined %}
                            <div class="form-group col-xl-2 col-lg-2 col-md-2 col-sm-1 my-1">
                                {{ form_start(delete_form) }}
                                <input type="submit" value="supprimer" class="btn btn-rounded btn-danger mb-3"/>
                                {{ form_end(delete_form) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}