<!-- formulaire commun à la création et modification d'un utilisateur -->
{% set action = app.request.attributes.get("_route") %}
{{ form_start(form) }}
<div class="card person-card">
    <div class="card-body">
        <div class="row">
            <div class="form-group col-md-2">
                <select id="input_sex" class="form-control">
                    <option value="Mr.">Garçon</option>
                    <option value="Mme.">Fille</option>
                </select>
            </div>
            <div class="form-group col-md-1">
                Prénom:
            </div>
            <div class="form-group col-md-4">
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control',
                    'placeholder': "prénom"}}) }}
            </div>
            <div class="form-group col-md-1">
                Nom:
            </div>
            <div class="form-group col-md-4">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control',
                    'placeholder': "nom"}}) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                Date de naissance:
            </div>
            <div class="form-group col-md-4">
                {{ form_widget(form.naissance, {'placeholder': "date de naissance"}) }}
            </div>
            <div class="form-group col-md-1">
                Actif:
            </div>
            <div class="form-group col-md-2">
                {{ form_widget(form.active, {'attr': {'class': 'form-control',
                    'placeholder': "actif"}}) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                Commentaire:
            </div>
            <div class="form-group col-md-4">
                {{ form_widget(form.commentaire, {'placeholder': "commentaire"}) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
            </div>
            <div class="form-group col-md-2">
                {{ form_widget(form) }}
                {% if 'new' in action %}
                    <input type="submit" value="créer" />
                {% endif %}
                {% if 'edit' in action %}
                    <input type="submit" value="enregister" />
                {% endif %}
                {{ form_end(form) }}
            </div>
            <div class="form-group col-md-2">
                {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
                {{ form_end(delete_form) }}
            </div>
            <div class="form-group col-md-4">
            </div>
        </div>
    </div>
</div>