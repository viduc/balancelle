{% extends '@Balancelle/Default/layout.html.twig' %}

{% block body %}
    {{ parent() }}
        <h1>Création d'un enfant</h1>
        <div class="row">
            <div class="col-md-3">
                <div class="card person-card">
                    <img id="img_sex" class="person-img"
                        src="https://visualpharm.com/assets/217/Life%20Cycle-595b40b75ba036ed117d9ef0.svg">
                </div>
            </div>
            <div class="col-md-8">
                {{ form_start(form) }}
                <div class="card person-card">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-2">
                                <select id="input_sex" class="form-control">
                                    <option value="Mr.">Garçon</option>
                                    <option value="Mme.">Fille</option>
                                </select>
                            </div>
                            <div class="form-group col-md-1">
                                Prénom:
                            </div>
                            <div class="form-group col-md-4">
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control',
                                    'placeholder': "prénom"}}) }}
                            </div>
                            <div class="form-group col-md-1">
                                Nom:
                            </div>
                            <div class="form-group col-md-4">
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control',
                                    'placeholder': "nom"}}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                Date de naissance:
                            </div>
                            <div class="form-group col-md-4">
                                {{ form_widget(form.naissance, {'placeholder': "date de naissance"}) }}
                            </div>
                            <div class="form-group col-md-1">
                                Actif:
                            </div>
                            <div class="form-group col-md-2">
                                {{ form_widget(form.active, {'attr': {'class': 'form-control',
                                    'placeholder': "actif"}}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                Commentaire:
                            </div>
                            <div class="form-group col-md-4">
                                {{ form_widget(form.commentaire, {'placeholder': "commentaire"}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-5">
                            </div>
                            <div class="form-group col-md-2">
                                {{ form_widget(form) }}
                                    <input type="submit" value="Créer" />
                                {{ form_end(form) }}
                            </div>
                            <div class="form-group col-md-5">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div> 
        </div>
    </div>
</div>
{% endblock %}