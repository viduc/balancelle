<!DOCTYPE html>
<html class="no-js" lang="fr">
    {%  include '@Balancelle/Default/head.html.twig' %}
    <body>
        <!--[if lt IE 8]>
        <p class="browserupgrade">Vous utilisez un navigateur <strong>obsolète</strong>.
            <a href="http://browsehappy.com/">Mettez à jour votre navigateur</a></p>
        <![endif]-->
        <!-- preloader area start -->
        <div id="preloader">
            <div class="loader"></div>
        </div>
        <div class="page-container">
            {% include '@Balancelle/Default/menu.html.twig' %}
            {% include '@Balancelle/Default/page-title.html.twig' %}
            <div class="main-content">
                {% block message %}
                    <div class="row">
                        <div class="col-lg-12 ">
                            <div class="card">
                                <div class="card-body">
                                    <div class="alert-dismiss">
                                        {% for label, messages in app.flashes %}
                                            {% for message in messages %}
                                                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                                    {{ message }}
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span class="fa fa-times"></span>
                                                    </button>
                                                </div>
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endblock %}

                {# include '@Balancelle/Default/header.html.twig' #}
                {# include '@Balancelle/Default/page-title.html.twig' #}
                {# TODO inclure ici le title du body #}
                {% block body %}

                {% endblock %}
            </div>
        </div>
    </body>
    {% block script_end %}

        <script
                type="text/javascript"
                src="{{ asset('bundles/balancelle/js/scripts.js') }}" >
        </script>
        <!-- //Balancelle -->
        <script
                type="text/javascript"
                src="{{ asset('bundles/balancelle/js/balancelle.js') }}" >
        </script>
        <script
                type="text/javascript"
                src="{{ asset('bundles/balancelle/js/admin.js') }}" >
        </script>
        <script
                type="text/javascript"
                src="{{ asset('bundles/balancelle/js/balancelle_enfants.js') }}" >
        </script>
        <script
                type="text/javascript"
                src="{{ asset('bundles/balancelle/js/balancelle_permanences.js') }}" >
        </script>
    {% endblock %}
</html>