{% extends '@Balancelle/Default/layout.html.twig' %}
{% block title %}BalancelleBundle:Famille:tableauDeBord{% endblock %}
{% block body %}

<h1> Tableau de bord de ma Famille</h1>
    <div class="main-content-inner">
        <div class="card-area">
            <div class="row">
                <div class="col-lg-3 col-md-3 mt-5">
                    <div class="card card-bordered">
                        <div class="card-body">
                            <h5 class="title">Parent 1:</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                {{ parents['parent1'].prenom }}
                                {{ parents['parent1'].nom }}
                            </h6>
                            <p class="card-text">
                                {{ parents['parent1'].email }}
                            </p>
                        </div>
                    </div>
                </div>
                {% if parents['parent2'] %}
                <div class="col-lg-3 col-md-3 mt-5">
                    <div class="card card-bordered">
                        <div class="card-body">
                            <h5 class="title">Parent 2:</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                {{ parents['parent2'].prenom }}
                                {{ parents['parent2'].nom }}
                            </h6>
                            <p class="card-text">
                                {{ parents['parent2'].email }}
                            </p>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
            <div class="row">
                {% for enfant in famille.enfants %}
                <div class="col-lg-3 col-md-3 mt-5">
                    <div class="card card-bordered">
                        <div class="card-body">
                            <h5 class="title">Enfant:</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                {{ enfant.prenom }}
                                {{ enfant.nom }}

                            </h6>
                            <p class="card-text">
                                {{ enfant.naissance|date('d/m/Y') }}
                            </p>
                            <h6>
                                {{ enfant.structure.nom }}
                            </h6>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 mt-5">
                    <div class="card card-bordered">
                        <div class="card-body">
                            <h5 class="title">Mes permanences</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <div class="progress-perm">
                                    <div id="progessBarPermanence" class="progress-bar-perm"></div>
                                </div>
                            </h6>
                            <p class="card-text">
                                Vous avez effectué {{ permanenceFaite|length }} permanence(s) sur {{ nbPermanenceAFaire }} à réaliser.
                            </p>
                            <p class="card-text">
                                Vous êtes inscrit à {{ permanenceInscrit }} permanence(s).
                            </p>
                            {% if listePermanence|length %}

                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Liste de vos permanences</h4>
                                        <div class="single-table">
                                            <div class="table-responsive">
                                                <table class="table table-hover text-center">
                                                    <thead class="text-uppercase">
                                                    <tr>
                                                        <th scope="col">Date</th>
                                                        <th scope="col">Titre</th>
                                                        <th scope="col">Commentaire</th>
                                                        <th scope="col">Réalisée</th>
                                                        <th scope="col">action</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for permanence in listePermanence %}
                                                    <tr>
                                                        <th scope="row">{{ permanence.debut|date('d/m/Y') }}</th>
                                                        <td>{{ permanence.titre }}</td>
                                                        <td>{{ permanence.commentaire }}</td>
                                                        {% if(permanence.realise) %}
                                                            <td><span class="status-p bg-success">réalisée</span></td>
                                                        {% else %}
                                                            <td><span class="status-p bg-primary">a faire</span></td>
                                                        {% endif %}
                                                        <td>
                                                            <a href="{{ path('permanence_inscription', { 'id': permanence.id }) }}">
                                                                <i class="ti-eye"></i></a>
                                                        </td>
                                                    </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p>
                                    {#dump(listePermanence) #}
                                </p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        var pourcentagePermanenceFaite = "{{  pourcentagePermanenceFaite }}";
    </script>
{% endblock %}
