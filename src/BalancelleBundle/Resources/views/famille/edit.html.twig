{% extends '@Balancelle/Default/layout.html.twig' %}

{% block body %}
    {{ parent() }}
        <h1>Edition d'une famille</h1>
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-8">
                {% include "@Balancelle/famille/form_famille.html.twig" %}
            </div>
            <div class="col-md-1"></div>
        </div>
        <h2>Liste des enfants de la famille</h2>
        <div class="row">
            <div class="col-md-1">
                <button
                        type="button"
                        class="btn btn-primary"
                        id="btnAjouterEnfant">
                    <i class="fa fa-child"></i> Ajouter
                </button>
            </div>
            <div class="col-md-8">
                <ul>
                    {% for enfant in enfants%}
                        {% if enfant.famille != null
                            and enfant.famille.id == famille.id %}
                            <li><a href="{{ path(
                                    'enfant_edit',
                                    {'id': enfant.id}
                                ) }}">
                                {{ enfant.nom }}
                                {{ enfant.prenom }}
                                {{ enfant.naissance|date('d/m/Y') }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-1">
                {% if errors != null %}
                    {{ errors.message }}
                {% endif %}
            </div>
        </div>

    {% include "@Balancelle/famille/modal_enfant.html.twig" %}
    <input type="hidden" id="idFamille" value="{{ famille.id }}">

    </div>
</div>
{% endblock %}
