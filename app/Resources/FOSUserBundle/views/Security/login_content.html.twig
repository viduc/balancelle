{% trans_default_domain 'FOSUserBundle' %}

<div class="login-box ptb--100">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if error %}
        <div class="login-other"
            style="margin: 10px 0px;
                padding:12px;
                color: #D8000C;
                background-color: #FFD2D2;
                vertical-align:middle;
                horiz-align: center">
                {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
        {% endif %}
        <div class="login-form-head">
            <h4>Connexion</h4>
            <p>Bonjour, bienvenue sur l'intranet de la crèche</p>
            <p style="color: orange"><b>La Balancelle</b></p>
            <p>connectez vous avec votre login et votre mot de passe pour accéder à votre espace.</p>
        </div>
        <div class="login-form-body">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form-gp">
                <label for="username">login</label>
                <input type="text" id="url" name="_username"
                       value="{{ last_username }}" required="required"
                       autocomplete="username" />
                <i class="ti-user"></i>
            </div>
            <div class="form-gp">
                <label for="password">Mot de passe</label>
                <input type="password" id="url" name="_password"
                       required="required" autocomplete="current-password" />
                <i class="ti-lock"></i>
            </div>
            <div class="row mb-4 rmber-area">
                <!--div class="col-6">
                    <div class="custom-control custom-checkbox mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="remember_me" name="_remember_me" value="on">
                        <label class="custom-control-label" for="customControlAutosizing">Se souvenir de moi</label>
                    </div>
                </div-->
                <div class="col-6 text-right">
                    <a href="{{ path ('fos_user_resetting_request') }}">Mot de passe oublié?</a>
                </div>
            </div>
            <div class="submit-btn-area">
                <button id="form_submit" type="submit">Envoyer <i class="ti-arrow-right"></i></button>
            </div>
            <div class="form-footer text-center mt-5">
                <!--p class="text-muted">Don't have an account? <a href="register.html">Sign up</a></p-->
                <a href="{{ path('balancelle_contact') }}">
                    <button
                            type="button"
                            class="btn btn-primary">
                        <i class="fa fa-question-circle"></i>
                    </button>
                </a>
            </div>
        </div>
    </form>
</div>