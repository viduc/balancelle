{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post">
<div id="wrapper">
    <div id="wrappertop">
        {% if error %}
            {{ error.messageKey|trans(error.messageData, 'security') }}
        {% endif %}
    </div>
    
    <div id="wrappermiddle">
        <h2>Identifiant</h2>
        <div id="username_input">
            <div id="username_inputleft"></div>
            <div id="username_inputmiddle">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <input type="text" id="url" name="_username" 
                    value="{{ last_username }}" required="required" 
                    autocomplete="username" />
                <img 
                    id="url_user"
                    src="{{asset('bundles/app/images/admin/login/user.png')}}"
                    alt="">
            </div>
            <div id="username_inputright"></div>
        </div>
        <div id="password_input">
            <div id="password_inputleft"></div>
            <div id="password_inputmiddle">
                <input type="password" id="url" name="_password" 
                    required="required" autocomplete="current-password" />
                <img 
                    id="url_password" 
                    src="{{asset('bundles/app/images/admin/login/passicon.png')}}" 
                    alt="">
            </div>
            <div id="password_inputright"></div>
        </div>

        <div id="submit">
            <input
                type="image"
                src="{{asset('bundles/app/images/admin/login/submit_hover.png')}}"
                id="submit1" value="{{ 'security.login.submit'|trans }}">
            <input 
                type="image" 
                src="{{asset('bundles/app/images/admin/login/submit.png')}}" 
                id="submit2" value="{{ 'security.login.submit'|trans }}">
            <!--input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" /-->
        </div>

        <div id="links_left">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
    </div>
    <div id="wrapperbottom"></div>
    <div id="powered">
	<p>Produit par <a href="https://labalancelle.yo.fr">La Balancelle</a></p>
    </div>
</div>
</form>